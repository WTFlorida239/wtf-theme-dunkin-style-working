{% comment %}
  sections/header.liquid
  This creates the site header with logo, navigation, and cart link.
{% endcomment %}

<header class="site-header" role="banner">
  <div class="header-container page-width">
    <div class="header-logo">
      <a href="{{ routes.root_url }}">
        {%- if settings.logo != blank -%}
          <img
            src="{{ settings.logo | image_url: width: 200 }}"
            alt="{{ shop.name | escape }}"
            style="max-width: 150px;"
          >
        {%- else -%}
          <span class="h2">{{ shop.name }}</span>
        {%- endif -%}
      </a>
    </div>

    {%- if section.settings.menu != blank -%}
      <nav class="header-nav" role="navigation">
        <ul class="header-nav__list">
          {%- for link in section.settings.menu.links -%}
            <li class="header-nav__item">
              <a href="{{ link.url }}" class="header-nav__link {% if link.active %}is-active{% endif %}">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>
    {%- endif -%}

    <div class="header-actions">
      <a href="{{ routes.cart_url }}" class="header-cart-link"> Cart (<span id="cart-count">0</span>) </a>
    </div>
  </div>
</header>

<style>
  .site-header {
    padding: 1rem 2rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    background-color: var(--color-base-background-1);
  }
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: var(--page-width);
    margin: 0 auto;
  }
  .header-logo a, .header-nav__link, .header-cart-link {
    color: rgb(var(--color-base-text));
    text-decoration: none;
    font-weight: bold;
  }
  .header-nav__list {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .header-actions {
    min-width: 150px;
    text-align: right;
  }
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
