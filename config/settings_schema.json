  {
    "name": "Branding",
    "settings": [
      {
        "type": "header",
        "content": "Base colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary (Buttons & Accents)",
        "default": "#ff6600"
      },
      {
        "type": "color",
        "id": "color_success",
        "label": "Success (Selections)",
        "default": "#28a745"
      },
      {
