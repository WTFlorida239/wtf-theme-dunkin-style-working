  {
    "name": "Cart & UX",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_cart_drawer",
        "label": "Enable cart drawer (if theme supports it)",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_ajax_adds",
        "label": "Enable AJAX add-to-cart (global)",
        "default": true
      },
      {
        "type": "radio",
        "id": "cart_count_strategy",
        "label": "Cart count strategy",
        "default": "shopify_then_local",
        "options": [
          {
            "value": "shopify_only",
            "label": "Shopify cart.js only"
          },
          {
            "value": "shopify_then_local",
            "label": "Shopify cart.js with localStorage fallback"
          },
          {
            "value": "local_only",
            "label": "localStorage only (dev/local)"
          }
        ]
      }
    ]
  },
  {
    "name": "Global Drink Defaults",
    "settings": [
      {
        "type": "header",
        "content": "Flavor pump defaults (used by drink pages; can be overridden via page metafields)"
