        "id": "color_background",
        "label": "Background",
        "default": "#f8f9fa"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Body text",
        "default": "#333333"
      },
      {
        "type": "header",
        "content": "Typography"
      },
      {
        "type": "select",
        "id": "font_scale",
        "label": "Base font size",
        "default": "16",
        "options": [
          {
            "value": "15",
            "label": "Small (15px)"
          },
          {
            "value": "16",
            "label": "Default (16px)"
          },
          {
            "value": "17",
            "label": "Large (17px)"
          }
        ]
      }
    ]
  },
  {
    "name": "Cart & UX",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_cart_drawer",
        "label": "Enable cart drawer (if theme supports it)",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_ajax_adds",
        "label": "Enable AJAX add-to-cart (global)",
        "default": true
      },
      {
        "type": "radio",
        "id": "cart_count_strategy",
        "label": "Cart count strategy",
        "default": "shopify_then_local",
        "options": [
          {
            "value": "shopify_only",
            "label": "Shopify cart.js only"
          },
          {
            "value": "shopify_then_local",
            "label": "Shopify cart.js with localStorage fallback"
          },
          {
            "value": "local_only",
            "label": "localStorage only (dev/local)"
          }
        ]
      }
    ]
  },
  {
